<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ========================================================================
         SEARCH VIEW - Phiên đồng bộ
         ======================================================================== -->
    <record id="search_pic_ecommerce_session" model="ir.ui.view">
        <field name="name">search.pic.ecommerce.session</field>
        <field name="model">pic.ecommerce.session</field>
        <field name="arch" type="xml">
            <search string="Phiên đồng bộ">
                <field name="name"/>
                <field name="config_id"/>
                <field name="user_id"/>
                <field name="state"/>

                <filter string="Dự thảo" name="filter_draft"
                        domain="[('state', '=', 'draft')]"/>
                <filter string="Đã đồng bộ" name="filter_confirm"
                        domain="[('state', '=', 'confirm')]"/>
                <filter string="Đang thực hiện" name="filter_processing"
                        domain="[('state', '=', 'processing')]"/>
                <filter string="Hoàn thành" name="filter_done"
                        domain="[('state', '=', 'done')]"/>

                <separator/>
                <filter string="Phiên của tôi" name="filter_my_sessions"
                        domain="[('user_id', '=', uid)]"/>

                <group expand="0" string="Nhóm theo">
                    <filter string="Sàn TMĐT" name="groupby_config_id"
                            context="{'group_by': 'config_id'}"/>
                    <filter string="Người phụ trách" name="groupby_user_id"
                            context="{'group_by': 'user_id'}"/>
                    <filter string="Trạng thái" name="groupby_state"
                            context="{'group_by': 'state'}"/>
                    <filter string="Ngày tạo" name="groupby_date"
                            context="{'group_by': 'date'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- ========================================================================
         TREE VIEW - Phiên đồng bộ
         ======================================================================== -->
    <record id="tree_pic_ecommerce_session" model="ir.ui.view">
        <field name="name">tree.pic.ecommerce.session</field>
        <field name="model">pic.ecommerce.session</field>
        <field name="arch" type="xml">
            <tree string="Phiên đồng bộ"
                  sample="1"
                  decoration-info="state == 'draft'"
                  decoration-primary="state == 'confirm'"
                  decoration-warning="state == 'processing'"
                  decoration-success="state == 'done'"
                  decoration-muted="state == 'cancel'">

                <field name="name"/>
                <field name="config_id"/>
                <field name="date_from"/>
                <field name="date_to" optional="show"/>
                <field name="user_id" widget="many2one_avatar_user"/>
                <field name="date" optional="hide"/>
                <field name="date_confirm" optional="show"/>
                <field name="date_done" optional="hide"/>
                <field name="warning" optional="show"/>
                <field name="count_ecommerce" string="Đơn hàng"/>
                <field name="count_payment" optional="hide"/>
                <field name="count_return" optional="hide"/>
                <field name="state"
                       widget="badge"
                       decoration-info="state == 'draft'"
                       decoration-primary="state == 'confirm'"
                       decoration-warning="state == 'processing'"
                       decoration-success="state == 'done'"
                       decoration-muted="state == 'cancel'"/>
            </tree>
        </field>
    </record>

    <!-- ========================================================================
         KANBAN VIEW - Phiên đồng bộ
         ======================================================================== -->
    <record id="kanban_pic_ecommerce_session" model="ir.ui.view">
        <field name="name">kanban.pic.ecommerce.session</field>
        <field name="model">pic.ecommerce.session</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile"
                    sample="1"
                    quick_create="false">

                <field name="name"/>
                <field name="config_id"/>
                <field name="user_id"/>
                <field name="state"/>
                <field name="date"/>
                <field name="count_ecommerce"/>
                <field name="count_payment"/>
                <field name="count_return"/>
                <field name="warning"/>

                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_card oe_kanban_global_click
                                          oe_kanban_card_#{record.state.raw_value}
                                          #{record.warning.raw_value ? 'border-warning' : ''}">

                            <div class="oe_kanban_content">
                                <!-- Header -->
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="name"/>
                                        </strong>
                                        <div class="o_kanban_record_subtitle text-muted">
                                            <i class="fa fa-building-o"/>
                                            <field name="config_id"/>
                                        </div>
                                    </div>
                                    <div>
                                        <field name="state" widget="badge"
                                               decoration-info="state == 'draft'"
                                               decoration-primary="state == 'confirm'"
                                               decoration-warning="state == 'processing'"
                                               decoration-success="state == 'done'"
                                               decoration-muted="state == 'cancel'"/>
                                    </div>
                                </div>

                                <!-- Body -->
                                <div class="o_kanban_record_body">
                                    <div class="row">
                                        <div class="col-6">
                                            <a type="object"
                                               name="action_view_pic_ecommerce_order"
                                               class="badge badge-pill badge-info">
                                                <i class="fa-shopping-cart"/>
                                                <field name="count_ecommerce"/>
                                                Đơn hàng
                                            </a>
                                        </div>
                                        <div class="col-6" t-if="record.count_payment.raw_value > 0">
                                            <a type="object"
                                               name="action_view_pic_ecommerce_payment"
                                               class="badge badge-pill badge-success">
                                                <i class="fa fa-money"/>
                                                <field name="count_payment"/>
                                                TT
                                            </a>
                                        </div>
                                    </div>
                                    <div class="row mt-2" t-if="record.count_return.raw_value > 0">
                                        <div class="col-12">
                                            <a type="object"
                                               name="action_view_pic_ecommerce_return"
                                               class="badge badge-pill badge-warning">
                                                <i class="fa fa-undo"/>
                                                <field name="count_return"/>
                                                Trả hàng
                                            </a>
                                        </div>
                                    </div>

                                    <div class="mt-2" t-if="record.warning.raw_value">
                                        <div class="alert alert-warning mb-0" role="alert">
                                            <i class="fa fa-exclamation-triangle"/>
                                            Có cảnh báo
                                        </div>
                                    </div>
                                </div>

                                <!-- Footer -->
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <field name="user_id" widget="many2one_avatar_user"/>
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <span class="badge badge-pill badge-light">
                                            <i class="fa fa-calendar"/>
                                            <field name="date" widget="date"/>
                                        </span>
                                    </div>
                                </div>
                            </div>

                            <!-- Dropdown menu -->
                            <div class="oe_kanban_footer">
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <button type="object"
                                                name="action_confirm"
                                                class="btn btn-sm btn-primary"
                                                t-if="record.state.raw_value == 'draft'">
                                            Đồng bộ
                                        </button>
                                        <button type="object"
                                                name="action_create_ecommerce_transaction"
                                                class="btn btn-sm btn-success"
                                                t-if="record.state.raw_value == 'confirm'">
                                            Tạo giao dịch
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- ========================================================================
         FORM VIEW - Phiên đồng bộ
         ======================================================================== -->
    <record id="form_pic_ecommerce_session" model="ir.ui.view">
        <field name="name">form.pic.ecommerce.session</field>
        <field name="model">pic.ecommerce.session</field>
        <field name="arch" type="xml">
            <form string="Phiên đồng bộ">
                <header>
                    <button name="action_confirm"
                            string="Đồng bộ"
                            groups="base.group_user"
                            invisible="state != 'draft'"
                            type="object"
                            class="oe_highlight"/>

                    <button name="action_create_ecommerce_transaction"
                            string="Tạo giao dịch"
                            invisible="not is_user_current or state not in ['confirm']"
                            type="object"
                            class="oe_highlight"/>

                    <button name="action_create_sale_order"
                            string="Xác nhận giao dịch"
                            confirm="Hệ thống sẽ kiểm tra và xác nhận tất cả các đơn hàng TMĐT thuộc phiên này."
                            invisible="state != 'processing'"
                            type="object"
                            class="oe_highlight"/>

                    <button name="action_create_ecommerce_transaction"
                            string="Tạo giao dịch"
                            invisible="not is_user_current or state not in ['processing']"
                            type="object"
                            groups="base.group_no_one"/>

                    <button name="action_create_sale_order"
                            string="Xác nhận giao dịch"
                            invisible="state != 'done'"
                            type="object"
                            groups="base.group_no_one"/>

                    <button name="action_draft"
                            string="Về dự thảo"
                            invisible="not is_user_current or state not in ['confirm']"
                            type="object"/>

                    <button name="action_cancel"
                            string="Hủy"
                            type="object"
                            invisible="not is_user_current or state not in ['draft','confirm']"/>

                    <button name="action_done"
                            string="Hoàn thành"
                            type="object"
                            groups="base.group_no_one"
                            invisible="state not in ['processing']"/>

                    <field name="state" widget="statusbar"/>
                </header>

                <sheet>
                    <!-- Button box -->
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button"
                                name="action_view_pic_ecommerce_order"
                                type="object"
                                icon="fa-credit-card"
                                invisible="count_ecommerce == 0">
                            <field name="count_ecommerce" widget="statinfo" string="Đơn hàng"/>
                        </button>
                        <button class="oe_stat_button"
                                name="action_view_pic_ecommerce_payment"
                                type="object"
                                icon="fa-pencil-square-o"
                                invisible="count_payment == 0">
                            <field name="count_payment" widget="statinfo" string="Thanh toán"/>
                        </button>
                        <button class="oe_stat_button"
                                name="action_view_pic_ecommerce_return"
                                type="object"
                                icon="fa-book"
                                invisible="count_return == 0">
                            <field name="count_return" widget="statinfo" string="Trả hàng"/>
                        </button>
                    </div>

                    <!-- Title -->
                    <div class="oe_title">
                        <label for="name" string="Đơn hàng thương mại điện tử"/>
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>

                    <!-- Main info -->
                    <group>
                        <group>
                            <field name="is_user_current" invisible="1"/>
                            <field name="user_id" widget="many2one_avatar_user" options="{'no_create': True}"/>
                            <field name="config_id" domain="[('type', '!=', False)]" options="{'no_create': True}"/>
                            <label for="date_from" string="Lấy dữ liệu"/>
                            <div class="o_row">
                                <field name="date_from" nolabel="1" class="oe_inline" readonly="state != 'draft'"/>
                                <i class="fa fa-long-arrow-right mx-2" aria-label="to" title="to"/>
                                <field name="date_to" nolabel="1" class="oe_inline" readonly="state != 'draft'"/>
                            </div>
                        </group>
                        <group>
                            <field name="date"/>
                            <field name="date_confirm" invisible="date_confirm == False"/>
                            <field name="date_done" invisible="date_done == False"/>
                        </group>
                    </group>

                    <!-- Warning -->
                    <group string="Cảnh báo" invisible="warning == False" colspan="4">
                        <field name="warning" nolabel="1" class="text-warning" colspan="4"/>
                    </group>

                    <!-- Notebook -->
                    <notebook>
                        <page string="Thông tin mặc định">
                            <group>
                                <group>
                                    <field name="partner_id"
                                           widget="res_partner_many2one"
                                           options="{'no_create': True}"/>
                                    <field name="partner_invoice_id" widget="res_partner_many2one"
                                           context="{'default_type':'invoice', 'show_address': False, 'show_vat': False}"
                                           options="{'no_create': True}"
                                    />
                                    <field name="partner_shipping_id" widget="res_partner_many2one"
                                           context="{'default_type':'delivery', 'show_address': False, 'show_vat': False}"
                                           options="{'no_create': True}"
                                    />
                                    <!--domain="['|', ('id', '=', partner_id), '&amp;', ('type', '=', 'invoice'), ('parent_id', '=', partner_id)]"-->
                                    <!--domain="['|', ('id', '=', partner_id), '&amp;', ('type', '=', 'delivery'), ('parent_id', '=', partner_id)]"-->
                                    <field name="payment_term_id" required="1" options="{'no_create': True}"/>
                                </group>
                                <group>
                                    <field name="source_id" options="{'no_create': True}"/>
                                    <field name="warehouse_id" required="1" options="{'no_create': True}"/>
                                    <field name="pricelist_id" required="1" options="{'no_create': True}"/>
                                </group>
                            </group>
                        </page>

                        <page string="Thông tin đồng bộ" groups="base.group_no_one">
                            <group>
                                <field name="orders" force_save="1"/>
                                <field name="order_items" force_save="1"/>
                                <field name="return_orders" force_save="1"/>
                                <field name="return_order_items" force_save="1"/>
                                <field name="payment_orders" force_save="1"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>

                <!-- Chatter -->
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- ========================================================================
         ACTIONS
         ======================================================================== -->
    <record id="action_pic_ecommerce_session" model="ir.actions.act_window">
        <field name="name">Phiên đồng bộ</field>
        <field name="res_model">pic.ecommerce.session</field>
        <field name="view_mode">tree,form,kanban</field>
        <field name="search_view_id" ref="search_pic_ecommerce_session"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Tạo phiên đồng bộ mới
            </p>
            <p>
                Phiên đồng bộ giúp bạn lấy đơn hàng từ các sàn thương mại điện tử.
            </p>
        </field>
    </record>
</odoo>